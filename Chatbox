#include <stdio.h>
#include <string.h>

int main() {
    char msg[100];

    printf("Simple Chat Box (type 'bye' to exit)\n");

    while (1) {
        printf("\nYou: ");
        gets(msg);  // simple input (for short code only)
        
        if (strcmp(msg, "hi") == 0)
            printf("Bot: Hello! Kaise ho?\n");
        else if (strcmp(msg, "how are you") == 0)
            printf("Bot: Main theek hoon, tum batao?\n");
        else if (strcmp(msg, "name") == 0)
            printf("Bot: Mera naam ChatBot hai.\n");
        else if (strcmp(msg, "project") == 0)
            printf("Bot: Yeh ek simple chatbox project hai C language mein.\n");
        else if (strcmp(msg, "bye") == 0) {
            printf("Bot: Bye! Have a nice day!\n");
            break;
        } else
            printf("Bot: Mujhe samajh nahi aaya.\n");
    }

    return 0;
}
